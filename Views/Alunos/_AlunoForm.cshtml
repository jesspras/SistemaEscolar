@model SistemaEscolar.ViewModels.AlunoViewModel

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="col-md-3 mb-3">
        <label asp-for="DataNascimento" class="form-label"></label>
        <input asp-for="DataNascimento" type="date" class="form-control" />
    </div>

    <div class="col-md-3 mb-3">
        <label asp-for="CPF" class="form-label"></label>
        <input asp-for="CPF" class="form-control" />
    </div>
</div>

<div class="row">
    <div class="col-md-3 mb-3">
        <label asp-for="Sexo" class="form-label"></label>
        <select asp-for="Sexo" class="form-select">
            <option value="">Selecione</option>
            <option>Masculino</option>
            <option>Feminino</option>
        </select>
    </div>

    <div class="col-md-3 mb-3">
        <label asp-for="Cor" class="form-label"></label>
        <input asp-for="Cor" class="form-control" />
    </div>

    <div class="col-md-6 mb-3">
        <label asp-for="TurmaId" class="form-label"></label>
        <select asp-for="TurmaId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Turmas, "TurmaId", "Nome"))">
            <option value="">Selecione a turma</option>
        </select>
    </div>
</div>

<fieldset class="border p-3 mb-3">
    <legend class="w-auto px-2">Endereço</legend>

    <div class="row">
        <div class="col-md-6 mb-2">
            <label asp-for="Rua" class="form-label"></label>
            <input asp-for="Rua" class="form-control" />
        </div>

        <div class="col-md-4 mb-2">
            <label asp-for="Bairro" class="form-label"></label>
            <input asp-for="Bairro" class="form-control" />
        </div>

        <div class="col-md-2 mb-2">
            <label asp-for="CEP" class="form-label"></label>
            <input asp-for="CEP" class="form-control" />
        </div>
    </div>
</fieldset>

<fieldset class="border p-3 mb-3">
    <legend class="w-auto px-2">Responsáveis</legend>

    <div class="row">
        <div class="col-md-6 mb-2">
            <label asp-for="NomeMae" class="form-label"></label>
            <input asp-for="NomeMae" class="form-control" />
        </div>

        <div class="col-md-6 mb-2">
            <label asp-for="TelefoneMae" class="form-label"></label>
            <input asp-for="TelefoneMae" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-2">
            <label asp-for="NomePai" class="form-label"></label>
            <input asp-for="NomePai" class="form-control" />
        </div>

        <div class="col-md-6 mb-2">
            <label asp-for="TelefonePai" class="form-label"></label>
            <input asp-for="TelefonePai" class="form-control" />
        </div>
    </div>
</fieldset>

<fieldset class="border p-3 mb-3">
    <legend class="w-auto px-2">Pessoas Autorizadas (até 5)</legend>

    @for (int i = 0; i < Model.PessoasAutorizadas.Count; i++)
    {
        <div class="row mb-2">
            <div class="col-md-6">
                <input asp-for="PessoasAutorizadas[i].Nome"
                       class="form-control"
                       placeholder="Nome" />
            </div>

            <div class="col-md-6">
                <input asp-for="PessoasAutorizadas[i].Telefone"
                       class="form-control"
                       placeholder="Telefone" />
            </div>
        </div>
    }
</fieldset>

<div class="mt-3">
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
