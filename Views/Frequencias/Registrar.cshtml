@model SistemaEscolar.ViewModels.FrequenciaViewModel

@{
    ViewData["Title"] = "Registrar Frequência";
}

<h2>Frequência – @Model.NomeTurma</h2>

<div class="mb-3">
    <strong>Mês/Ano:</strong> @Model.Mes/@Model.Ano
</div>

<form asp-action="Registrar" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="TurmaId" />
    <input type="hidden" asp-for="Mes" />
    <input type="hidden" asp-for="Ano" />

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="DiasLetivos" class="form-label">Dias Letivos</label>
            <input asp-for="DiasLetivos" class="form-control" />
            <span asp-validation-for="DiasLetivos" class="text-danger"></span>
        </div>
    </div>

    <table class="table table-bordered table-sm">
        <thead class="table-light">
            <tr>
                <th>Aluno</th>
                <th>Data Nasc.</th>
                <th>Faltas</th>
                <th>Frequência (%)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Alunos.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Alunos[i].Nome
                        <input type="hidden" asp-for="Alunos[@i].AlunoId" />
                        <input type="hidden" asp-for="Alunos[@i].Nome" />
                    </td>
                    <td>
                        @Model.Alunos[i].DataNascimento.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        <input asp-for="Alunos[@i].Faltas"
                               class="form-control form-control-sm"
                               type="number"
                               min="0" />
                    </td>
                    <td>
                        @Model.Alunos[i].PercentualPresenca.ToString("N2") %
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">
            Salvar Frequência
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            Voltar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
